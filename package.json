{
  "name": "sometheme",
  "version": "1.0.0",
  "description": "A theme for WordPress",
  "scripts": {
    "docker-clean": "docker-compose down -v --remove-orphans",
    "bash": "docker-compose run wordpress /bin/bash",
    "savedb": "npm start && docker-compose exec mysql sh -c 'exec mysqldump wordpress -uroot -p\"$MYSQL_ROOT_PASSWORD\"' > ./initdb/data.sql",
    "wp": "npm start && docker run -it --rm --volumes-from wordpress --network container:wordpress wordpress:cli",
    "update": "brew update && brew upgrade ; npm update -g && npm update ; composer self-update && composer update ; docker-compose pull",
    "docker-save-down": "npm run savedb && npm run docker-clean",
    "start": "./bin/docker-ready.sh",
    "stop": "docker-compose down",
    "gulp": "gulp",
    "build": "npm run gulp build",
    "dev": "npm start && npm run gulp dev",
    "preinstall": "npm run add-localhost && npm run add-ssl",
    "postinstall": "npm start && docker-compose down && composer install",
    "add-localhost": "URL=www.wordpress.org.test ; grep -qxF \"127.0.0.1\t${URL}\" /etc/hosts && echo 'host record already exists' || ( echo \"127.0.0.1\t$URL\n\" | sudo tee -a /etc/hosts > /dev/null && echo 'host record added' )",
    "add-ssl": "./bin/ssl.sh",
    "remove-ca": "npm run remove-ca:remove-trust-cert && rm -R ~/.localssl",
    "remove-ca:remove-trust-cert": "security find-certificate -c 'Localhost SSL' -a -Z | sudo awk '/SHA-1/{system(\"security delete-certificate -Z \"$NF)}'",
    "fix-scss": "stylelint some-theme/sass/**/*.scss --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:WraithKenny/dev.git"
  },
  "keywords": [
    "WordPress",
    "Docker",
    "SSL"
  ],
  "author": "Ken Newman",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://unfocus.com",
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": true,
      "cssnano": true
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "**/*.min.js",
    "html/*",
    "node_modules/*",
    "vendor/*",
    "bower_components/*"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-wordpress/scss"
    ],
    "rules": {
      "no-descending-specificity": null,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    },
    "ignoreFiles": [
      ".git/*",
      "**/*.min.css",
      "html/*",
      "node_modules/*",
      "vendor/*",
      "bower_components/*",
      "some-theme/css/*"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "bootstrap": "^4.5.3",
    "core-js": "^3.8.1",
    "hamburgers": "^1.1.3",
    "jquery": "^3.5.1",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1",
    "swiper": "^6.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@wordpress/babel-preset-default": "^4.19.0",
    "@wordpress/browserslist-config": "^2.7.0",
    "@wordpress/eslint-plugin": "^7.3.0",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.13",
    "browserslist": "^4.16.0",
    "caniuse-lite": "^1.0.30001165",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.15.0",
    "esm": "^3.2.25",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "postcss": "^8.2.1",
    "sass": "^1.30.0",
    "stylelint": "^13.8.0",
    "stylelint-config-wordpress": "^17.0.0",
    "webpack": "^4.44.2",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
